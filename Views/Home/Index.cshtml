@{
    ViewData["Title"] = "Login";
}

<div class="text-center main-login-container">
    <h2 class="display-4">Bienvenido</h2>
    <form class="column-display" asp-area="" asp-controller="Home" asp-action="Account" method="POST">
        <h1>Inicia Sesion</h1>
        <label>Ingresa tu usuario</label>
        <input type="text" id="username" placeholder="JohnDoe333">
        <label>Ingresa tu contraseña</label>
        <input type="text" id="password" placeholder="*******">
        <input type="submit" value="Iniciar Sesion">
    </form>
    <div class="row-display">    
        <a href='@Url.Action("SignUp")'> No tengo cuenta</a>
        <a href="http://">Olvidé mi contraseña</a>
    </div>

</div>
